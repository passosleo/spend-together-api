{
  "name": "spend-together-api",
  "description": "spend-together-api",
  "version": "1.0.0",
  "main": "main.js",
  "license": "MIT",
  "author": "Leonardo Passos",
  "private": true,
  "scripts": {
    "start": "cross-env NODE_ENV=production node ./dist/src/infra/main.js",
    "start:migrate": "npx prisma migrate deploy && npm run start",
    "dev": "cross-env NODE_ENV=development nodemon",
    "prebuild": "rimraf ./dist",
    "build": "yarn prebuild && tsc && ts-node build",
    "vercel-build": "npx prisma generate",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "logs:clear": "rimraf ./logs",
    "test": "jest --passWithNoTests --coverage",
    "ts-check": "npx tsc --noEmit",
    "prepare": "husky",
    "pre-commit": "yarn ts-check && yarn lint",
    "pre-push": "yarn test"
  },
  "dependencies": {
    "@prisma/client": "^5.9.1",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "crypto-js": "^4.2.0",
    "dotenv": "^16.3.1",
    "ejs": "^3.1.10",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "log4js": "^6.9.1",
    "moment": "^2.30.1",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.14",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "4.6.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.13",
    "@types/crypto-js": "^4.2.2",
    "@types/express": "^4.17.17",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.4",
    "@types/node": "^20.1.0",
    "@types/nodemailer": "^6.4.15",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.2",
    "eslint-plugin-unused-imports": "^3.1.0",
    "fs-extra": "^11.2.0",
    "husky": "^9.1.4",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "prisma": "^5.9.1",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.2.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/passosleo/spends-api-v2"
  },
  "resolutions": {
    "@types/mime": "3.0.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run pre-commit",
      "pre-push": "npm run pre-push"
    }
  }
}
